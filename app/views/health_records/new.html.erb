<h1>Add Health Record</h1>

<%= form_with model: @health_record, local: true do |f| %>
  <p>
    <%= f.label :recorded_on %><br>
    <%= f.date_field :recorded_on %>
  </p>

 
 <p>
    <%= f.label :weight %><br>
    <%= f.number_field :weight %>
  </p>
   <p>
    <%= f.label :systolic, "Systolic (mmHg)" %><br>
    <%= f.number_field :systolic %>
  </p>
<p>
    <%= f.label :diastolic, "Diastolic (mmHg)" %><br>
    <%= f.number_field :diastolic %>
  </p>
   <p>
    <%= f.label :heart_rate %><br>
    <%= f.number_field :heart_rate %>
  </p>

  <p>
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </p>

  <%= f.submit "Save" %>
<% end %>
